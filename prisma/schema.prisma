// Main Prisma Schema - Ecommerce Agricultural Products
// This file serves as the main configuration and can be used for shared models

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["postgresqlExtensions", "relationJoins"]
  binaryTargets   = ["native", "linux-musl-openssl-3.0.x"]
  engineType      = "library"
  output          = "./generated/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  schemas  = ["public", "auth", "products", "orders", "inventory", "payments", "notifications"]
}

